{% extends 'base.html.twig' %}

{% block title %}Reservering index{% endblock %}

{% block body %}
    <h1>Reservering index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AanmaakDatum</th>
                <th>AankomstDatum</th>
                <th>VertrekDatum</th>
                <th>Kinderen</th>
                <th>Volwassenen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservering in reserverings %}
            <tr>
                <td>{{ reservering.id }}</td>
                <td>{{ reservering.AanmaakDatum ? reservering.AanmaakDatum|date('Y-m-d') : '' }}</td>
                <td>{{ reservering.AankomstDatum ? reservering.AankomstDatum|date('Y-m-d') : '' }}</td>
                <td>{{ reservering.VertrekDatum ? reservering.VertrekDatum|date('Y-m-d') : '' }}</td>
                <td>{{ reservering.Kinderen }}</td>
                <td>{{ reservering.Volwassenen }}</td>
                <td>
                    <a href="{{ path('reservering_show', {'id': reservering.id}) }}">show</a>
                    <a href="{{ path('reservering_edit', {'id': reservering.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservering_new') }}">Create new</a>
{% endblock %}
